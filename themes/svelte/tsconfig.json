{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@shared": ["shared"],
      "@shared/*": ["shared/*"],
      "@components/*": ["layout/_components/*"]
    },
    "importsNotUsedAsValues": "remove"
  },
  "include": ["layput/**/*", "src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"]
}
